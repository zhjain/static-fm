# ---------- Redis ----------
# Redis 服务器地址（支持远程）
REDIS_HOST=127.0.0.1
# Redis 端口
REDIS_PORT=6379
# Redis 密码（为空则无密码）
REDIS_PASSWORD=your_strong_password_here
# Redis 数据库编号（0~15）
REDIS_DB=0


# ---------- Icecast ----------
# 服务器地理位置
ICECAST_LOCATION=Earth
# 管理员邮箱
ICECAST_ADMIN=admin@your-radio.com
# 监听地址（0.0.0.0 = 所有接口）
ICECAST_HOSTNAME=0.0.0.0
# 监听端口
ICECAST_PORT=8000
# 来源密码（Liquidsoap 连接用）
ICECAST_SOURCE_PASSWORD=change_me_source
# 中继密码（备用）
ICECAST_RELAY_PASSWORD=change_me_relay
# 管理后台用户名
ICECAST_ADMIN_USER=admin
# 管理后台密码
ICECAST_ADMIN_PASSWORD=change_me_admin
# 最大客户端数
ICECAST_MAX_CLIENTS=100
# 最大来源数
ICECAST_MAX_SOURCES=2
# 突发数据大小
ICECAST_BURST_SIZE=65536
# 挂载点名称
ICECAST_MOUNT_NAME=/radio
# 挂载点密码（可与 source 相同）
ICECAST_MOUNT_PASSWORD=change_me_mount
# 最大听众数
ICECAST_MOUNT_MAX_LISTENERS=100
# 电台名称
ICECAST_STREAM_NAME=My Awesome Radio
# 电台描述
ICECAST_STREAM_DESCRIPTION=24/7 non-stop music
# 电台网址（用于 YP 目录）
ICECAST_STREAM_URL=https://your-radio.com
# 流派
ICECAST_GENRE=Various
# 比特率（用于元数据）
ICECAST_BITRATE=128


# ---------- Liquidsoap ----------
# Liquidsoap 日志文件路径
LIQ_LOG_FILE=./logs/liquidsoap.log
# 播放列表文件路径（.m3u）
LIQ_PLAYLIST_FILE=./playlists/current.m3u
# 静音/紧急音频文件
LIQ_SILENCE_FILE=./config/silence.mp3
# 歌曲信息推送 API 主机
LIQ_API_HOST=localhost
# 歌曲信息推送 API 端口
LIQ_API_PORT=3000
# Telnet 控制端口
LIQ_TELNET_PORT=1234